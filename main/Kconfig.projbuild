menu "Power sensing"

config POWER_PACK_DIVIDER_RATIO
    string "Pack divider ratio (Vpack/Vadc), e.g. 5.7"
    default "6.0"

config POWER_CELL_V_EMPTY
    string "Per-cell empty voltage (V)"
    default "3.30"

config POWER_CELL_V_FULL
    string "Per-cell full voltage (V)"
    default "4.15"

endmenu

menu "Shell Performance"

config SHELL_PERF_LOG_ENABLE
    bool "Enable shell performance logs"
    default n
    help
        Logs app frame timings and (optionally) task/core CPU load.

config SHELL_PERF_LOG_PERIOD_MS
    int "Log period (ms)"
    default 1000
    range 200 10000
    depends on SHELL_PERF_LOG_ENABLE

config SHELL_PERF_LOG_TOP_TASKS
    int "Top tasks to print"
    default 5
    range 1 10
    depends on SHELL_PERF_LOG_ENABLE

config SHELL_PERF_LOG_MAX_TASKS
    int "Max tasks sampled"
    default 64
    range 16 128
    depends on SHELL_PERF_LOG_ENABLE
    help
        Increase if your system has many tasks and logs report truncation.

endmenu
